<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:stateListAnimator="@animator/touch_floating"
    app:cardBackgroundColor="?@android:attr/colorAccent"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_drawee_view_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fadeDuration="300"
        app:failureImage="@drawable/ic_warning_black_48dp"
        app:failureImageScaleType="centerInside"
        app:progressBarAutoRotateInterval="1200"
        app:progressBarImage="@drawable/ic_rotate_right_black_48dp"
        app:progressBarImageScaleType="centerInside"
        app:retryImage="@drawable/ic_tag_faces_black_48dp"
        app:retryImageScaleType="centerInside"
        app:roundedCornerRadius="@dimen/v2dp"
        app:viewAspectRatio="0.618"
        tools:ignore="ContentDescription" />
</android.support.v7.widget.CardView>