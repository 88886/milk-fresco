<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_theme_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:stateListAnimator="@animator/touch_floating"
    app:cardBackgroundColor="?attr/card_background"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/v16dp">

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="@dimen/v16sp" />

        <ImageView
            android:id="@+id/image_view_image"
            android:layout_width="@dimen/v48dp"
            android:layout_height="@dimen/v48dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_item_theme_uncheck"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</android.support.v7.widget.CardView>
