<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorNormalBackground"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_drawee_view_image"
            android:layout_width="match_parent"
            app:fadeDuration="300"
            app:viewAspectRatio="0.618"
            app:retryImageScaleType="centerInside"
            app:retryImage="@drawable/ic_tag_faces_black_48dp"
            app:failureImageScaleType="centerInside"
            app:failureImage="@drawable/ic_warning_black_48dp"
            app:progressBarAutoRotateInterval="900"
            app:progressBarImage="@drawable/ic_rotate_right_black_48dp"
            app:progressBarImageScaleType="centerInside"
            app:roundedCornerRadius="@dimen/v2dp"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/v2dp"
            android:paddingEnd="@dimen/v4dp"
            android:textSize="@dimen/v10sp"
            android:paddingLeft="@dimen/v4dp"
            android:paddingRight="@dimen/v4dp"
            android:paddingStart="@dimen/v4dp"
            android:paddingTop="@dimen/v2dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>