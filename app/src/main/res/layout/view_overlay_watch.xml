<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorTransparent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_info"
            android:layout_width="@dimen/v56dp"
            android:layout_height="@dimen/v28dp"
            android:layout_marginBottom="@dimen/v16dp"
            android:background="@drawable/bg_button_splash"
            android:text="@string/info" />

        <Button
            android:id="@+id/button_download"
            android:layout_width="@dimen/v56dp"
            android:layout_height="@dimen/v28dp"
            android:layout_marginBottom="@dimen/v16dp"
            android:background="@drawable/bg_button_splash"
            android:text="@string/download" />

        <Button
            android:id="@+id/button_index"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/v28dp"
            android:layout_marginBottom="@dimen/v36dp"
            android:background="@drawable/bg_button_splash"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="@dimen/v56dp"
            android:paddingEnd="@dimen/v4dp"
            android:paddingLeft="@dimen/v4dp"
            android:paddingRight="@dimen/v4dp"
            android:paddingStart="@dimen/v4dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>