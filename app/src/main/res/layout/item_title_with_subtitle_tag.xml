<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorNormalBackground"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simple_drawee_view_image"
                android:layout_width="match_parent"
                app:fadeDuration="300"
                app:viewAspectRatio="0.618"
                app:retryImageScaleType="centerInside"
                app:retryImage="@drawable/ic_tag_faces_black_48dp"
                app:failureImageScaleType="centerInside"
                app:failureImage="@drawable/ic_warning_black_48dp"
                app:progressBarAutoRotateInterval="900"
                app:progressBarImage="@drawable/ic_rotate_right_black_48dp"
                app:progressBarImageScaleType="centerInside"
                app:roundedCornerRadius="@dimen/v2dp"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_view_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/v4dp"
                android:background="@drawable/bg_right_tag_circle"
                android:paddingEnd="@dimen/v8dp"
                android:paddingLeft="@dimen/v4dp"
                android:paddingRight="@dimen/v8dp"
                android:paddingStart="@dimen/v4dp"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/v10sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/v2dp"
            android:paddingLeft="@dimen/v4dp"
            android:paddingRight="@dimen/v4dp"
            android:paddingTop="@dimen/v4dp" />

        <TextView
            android:id="@+id/text_view_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/v4dp"
            android:paddingLeft="@dimen/v4dp"
            android:paddingRight="@dimen/v4dp"
            android:paddingTop="@dimen/v2dp"
            android:textSize="@dimen/v12sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>